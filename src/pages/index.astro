---
import ButtonSend from "../components/ButtonSend.astro";
import InputText 
	from "../components/InputText.astro";
import RadioButtonGroup from "../components/RadioButtonGroup.astro";
import Select from "../components/Select.astro";
import FormLayout 
	from "../layouts/FormLayout.astro";
---
<FormLayout>
	<h2 class="subtitulo" slot="subtitulo">Ingrese información </h2>
	<InputText  
		etiqueta="Nombre Completo"
		slot="caja-texto-nombre" 
	/>

	<InputText 
		etiqueta="Apellido Completo"
		slot="caja-texto-apellido"
	/>
	<InputText 
		etiqueta="Correo Electrónico"
		slot="caja-texto-email"
	/>
	
	<RadioButtonGroup 
		etiqueta="Seleccione tipo de documento:"
		slot="grupo-radio"
	/>
	<Select
		etiqueta="Seleccione su ciudad:"
		slot="select-ciudades"
	/>
	<ButtonSend
		etiqueta="Enviar"
		slot="boton-envio"
	/>
</FromLayout>
<style>
    .subtitulo{
        font-weight: 300;
		font-family:Arial, Helvetica, sans-serif;
        font-size: 20px;
        color:rgb(106, 65, 145);
		margin-left: 20px;
		margin-top: 20px;
    }
</style>